<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t("activerecord.attributes.task.title")%></th>
      <th scope="col"><%= t("activerecord.attributes.task.description")%></th>
      <th scope="col"><%= t("activerecord.attributes.task.start_time")%></th>
      <th scope="col"><%= t("activerecord.attributes.task.end_time")%></th>
      <th scope="col"><%= t("activerecord.attributes.task.priority")%></th>
      <th scope="col"><%= t("activerecord.attributes.task.title")%></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th scope="row"></th>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= task.description %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= t("Task_Priority.#{task.priority}")%></td>
        <td><%= t("Task_status.#{task.status}")%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("Task.create"), new_task_path, class: "btn btn-info" %>